CXX=gcc -Wall -O3

CPPFLAGS=-Iinc

LDFLAGS=#-lboost_program_options -lm

FILES= enhanced_algo #naive_algo
OBJECTS=$(addsuffix .o, $(FILES))
BIN=bin/enhanced_algo

all : $(BIN)

$(BIN) : $(addprefix obj/, $(OBJECTS))
	$(CXX) -o $@ $^ $(LDFLAGS)

obj/%.o : src/%.c
	$(CXX) -c -o $@ $^

exec:
	$(BIN)

clean :
	rm -f bin/* obj/*
